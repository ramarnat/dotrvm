#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/root/.rvm/gems/ruby-1.9.3-p125'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/root/.rvm/gems/ruby-1.9.3-p125:/root/.rvm/gems/ruby-1.9.3-p125@global'
ENV['PATH']='/root/.rvm/gems/ruby-1.9.3-p125/bin:/root/.rvm/gems/ruby-1.9.3-p125@global/bin:/root/.rvm/rubies/ruby-1.9.3-p125/bin:' + ENV['PATH']


begin
  gem 'rdoc'
rescue NameError => e # --disable-gems
  raise unless e.name == :gem
rescue Gem::LoadError
end

require 'rdoc/ri/driver'

RDoc::RI::Driver.run ARGV
