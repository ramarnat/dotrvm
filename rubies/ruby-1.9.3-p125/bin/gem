#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/root/.rvm/gems/ruby-1.9.3-p125'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/root/.rvm/gems/ruby-1.9.3-p125:/root/.rvm/gems/ruby-1.9.3-p125@global'
ENV['PATH']='/root/.rvm/gems/ruby-1.9.3-p125/bin:/root/.rvm/gems/ruby-1.9.3-p125@global/bin:/root/.rvm/rubies/ruby-1.9.3-p125/bin:' + ENV['PATH']

#--
# Copyright 2006 by Chad Fowler, Rich Kilmer, Jim Weirich and others.
# All rights reserved.
# See LICENSE.txt for permissions.
#++

require 'rubygems'
require 'rubygems/gem_runner'
require 'rubygems/exceptions'

required_version = Gem::Requirement.new ">= 1.8.7"

unless required_version.satisfied_by? Gem.ruby_version then
  abort "Expected Ruby Version #{required_version}, is #{Gem.ruby_version}"
end

args = ARGV.clone

begin
  Gem::GemRunner.new.run args
rescue Gem::SystemExitException => e
  exit e.exit_code
end

