#!/usr/bin/env ruby
ENV['GEM_HOME']=ENV['GEM_HOME'] || '/root/.rvm/gems/ruby-1.9.3-p125'
ENV['GEM_PATH']=ENV['GEM_PATH'] || '/root/.rvm/gems/ruby-1.9.3-p125:/root/.rvm/gems/ruby-1.9.3-p125@global'
ENV['PATH']='/root/.rvm/gems/ruby-1.9.3-p125/bin:/root/.rvm/gems/ruby-1.9.3-p125@global/bin:/root/.rvm/rubies/ruby-1.9.3-p125/bin:' + ENV['PATH']

#
#  RDoc: Documentation tool for source code
#        (see lib/rdoc/rdoc.rb for more information)
#
#  Copyright (c) 2003 Dave Thomas
#  Released under the same terms as Ruby

begin
  gem 'rdoc'
rescue NameError => e # --disable-gems
  raise unless e.name == :gem
rescue Gem::LoadError
end

require 'rdoc/rdoc'

begin
  r = RDoc::RDoc.new
  r.document ARGV
rescue SystemExit
  raise
rescue Exception => e
  if $DEBUG_RDOC then
    $stderr.puts e.message
    $stderr.puts "#{e.backtrace.join "\n\t"}"
    $stderr.puts
  elsif Interrupt === e then
    $stderr.puts
    $stderr.puts 'Interrupted'
  else
    $stderr.puts "uh-oh! RDoc had a problem:"
    $stderr.puts e.message
    $stderr.puts
    $stderr.puts "run with --debug for full backtrace"
  end

  exit 1
end

